@model IEnumerable<YAZLAB2.Models.DietPlan>

@{
    ViewData["Title"] = "DietPlanUser";
    Layout = "_AntrenorLayout";
}

<h1>Index</h1>

<p>
    <a asp-action="CreateDietPlan">Yeni plan oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.danisan_adsoyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hedefler)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                    @Html.DisplayFor(modelItem => item.id)
             </td>
              <td>
                    @Html.DisplayFor(modelItem => item.danisan_id)
             </td>
            <td>
                @Html.DisplayFor(modelItem => item.danisan_adsoyad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hedefler)
            </td>
                <td>
                    <a asp-action="EditDietPlan" asp-route-id="@item.id">Edit</a> |
                    <a asp-action="DeleteDietPlan" asp-route-id="@item.id">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table